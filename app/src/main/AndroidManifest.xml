<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <application
        android:name=".helper.MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:enableOnBackInvokedCallback="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ComfyLearn"
        android:usesCleartextTraffic="false"
        tools:targetApi="35">

        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.HomeActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.study.alphabet.AlphabetActivity"
            android:exported="false" />
        <activity
            android:name=".ui.study.number.NumberActivity"
            android:exported="false" />
        <activity
            android:name=".ui.study.arithmetic.ArithmeticActivity"
            android:exported="false" />
        <activity
            android:name=".ui.study.spelling.SpellingCategoryActivity"
            android:exported="false" />
        <activity
            android:name=".ui.study.spelling.SpellingDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.games.drawing.DrawingActivity"
            android:exported="false" />
        <activity
            android:name=".ui.games.fillIn.FillInActivity"
            android:exported="false" />
        <activity
            android:name=".ui.games.puzzle.PuzzleActivity"
            android:exported="false" />
        <activity
            android:name=".ui.games.mathgame.MathGameActivity"
            android:exported="false" />
        <activity
            android:name=".ui.games.DifficultySelectionActivity"
            android:exported="false" />

    </application>

</manifest>